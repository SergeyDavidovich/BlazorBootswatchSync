@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="page">
    <div class="navbar-dark bg-black ">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 bg-link-light">
            <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>
@code{
    protected override async Task OnInitializedAsync()
    {
        await SetThemeAsync(true);
    }
    private async Task SetThemeAsync(bool isdark)
    {
        //themeIconClass = GetCurrentThemeIcon(IsThemeDark);
        await JS.InvokeVoidAsync("SetDarkModeTheme", isdark);
    }
}
